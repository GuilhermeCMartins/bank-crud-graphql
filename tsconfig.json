{
  "compilerOptions": {
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "@*": ["./src/*"],
      "@common/*": ["./src/common/*"],
      "@views/*": ["./src/application/adapters/http/views/*"],
      "@adapters/*": ["./src/application/adapters/*"],
      "@controllers": ["./src/application/adapters/http/controllers"],
      "@controller/*": ["./src/application/adapters/http/controllers/*"],
      "@middlewares": ["./src/application/adapters/http/middlewares"],
      "@entity/*": ["./src/application/entities/*"]
    }
  }
}
