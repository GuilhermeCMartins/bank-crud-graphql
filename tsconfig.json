{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "build",
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {}
  },
  "include": ["src/**/*", "src/*", "koa"],
  "typeRoots": ["./node_modules/@types", "./src/types"],
  "exclude": ["node_modules"]
}
